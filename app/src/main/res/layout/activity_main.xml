<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54A2C1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="675dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ImVimagen"
            android:layout_width="130dp"
            android:layout_height="108dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            app:srcCompat="@drawable/calculadora" />

        <TextView
            android:id="@+id/TxtVResultadoAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="Resultado"
            android:textColor="#5526AC"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ETxTPrimerNumeroAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Número 1"
            android:inputType="number" />

        <EditText
            android:id="@+id/ETxTSegundoNumeroAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Número 2"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnSumanAM"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="+" />

            <Button
                android:id="@+id/BtnRestaAM"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnMultiplicacionAM"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="X" />

            <Button
                android:id="@+id/BtnDivisionAM"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="58dp"
            android:layout_marginLeft="223dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnOtraVentana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ventana 2" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>